<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#2C2F40">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/termsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="0 terms"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="#7A8097" />

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/termsCount"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:background="#2C2F40"
            android:clipToOutline="true"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userProfileImage"
            android:layout_alignBottom="@id/userProfileImage"
            android:layout_marginStart="8dp"
            android:text="sprhaingn"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>